<odoo>
    <data noupdate="1">
        <!-- Grupo para usuarios restringidos -->
        <record id="group_restricted_user" model="res.groups">
            <field name="name">Usuario Restringido</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <!-- Grupo para usuarios no restringidos -->
        <record id="group_no_restricted_user" model="res.groups">
            <field name="name">Usuario No Restringido</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <!-- Definir el proveedor "Proveedor Interno" -->
        <record id="supplier_interno" model="res.partner">
            <field name="name">Proveedor Interno</field>
            <field name="supplier_rank">1</field>
        </record>
    </data>
</odoo>